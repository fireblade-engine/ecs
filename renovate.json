{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "prConcurrentLimit": 3,
  "prHourlyLimit": 1,
  "recreateWhen": "auto",
  "prCreation": "not-pending",
  "packageRules": [
    {
      "groupName": "all dependencies",
      "matchUpdateTypes": ["minor", "patch"]
    }
  ],
  "labels": ["dependencies"]
}
